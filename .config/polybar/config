[module/player]

type = custom/script
exec = ~/.config/polybar/polybar-scripts/player-mpris-tail/player-mpris-tail.py -f '{icon} {:artist:t18:{artist}:}{:artist: - :}{:t20:{title}:}  %{A1:~/polybar-scripts/player-mpris-tail.py previous:} ‚èÆ %{A} %{A1:~/polybar-scripts/player-mpris-tail.py play-pause:} {icon-reversed} %{A} %{A1:~/.config/polybar/polybar-scripts/player-mpris-tail/player-mpris-tail.py next:} ‚è≠ %{A}'
tail = true
click-left = playerctl previous
click-right = playerctl next
click-middle = playerctl play-pause

[module/word-of-the-day]

